<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('../partials/head'); %>
<!-- FIN HEAD -->
<body>
    <div style="height: 10px;">
    </div>
    <div class="caja-volver">
        <a href="/" class="boton-admin" style="text-decoration: none; color: #000000;">
            SALIR DE ADMINISTRACION
            <i class="fa-solid fa-reply" style="color: #000000;"></i>
       </a>
    </div>
    <section class="body-articulos">
        <% products.forEach(event => { %>
        <article class="caja-producto">
            <picture class="foto-producto">
                <img
                    src="/img/products/<%= event.image %>"
                    alt="<%= event.title %>"
                    class=""
                />
            </picture>

            <section class="descripcion-producto">
                <section class="descripcion">
                    <p class="titulo-show"><%= event.title %></p>
                    <p class="lugar-show"><%= event.place %></p>
                </section>
            </section>
            <a href="/products/<%= event.id %>/detail">
                <button class="boton-comprar">
                    COMPRAR<i
                        class="ticket-botoncomprar fas fa-ticket-alt"
                    ></i>
                </button>
            </a>
        </article>
        <% }) %>
    </section>
</body>
</html>